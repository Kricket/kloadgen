{
  "$id": "https://example.com/collection.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "basic collections",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "controlString": {
      "type": "string"
    },
    "arrayOfStrings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "arrayOfObjectsOfBasicTypes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/objArrayDefinition"
      }
    },
    "mapOfStrings": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "mapOfObjectsOfBasicTypes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/objMapDefinition"
      }
    },
    "objectOfArraysOfBasicTypes":{
      "type": "object",
      "properties": {
        "stringControl": {"type": "string"},
        "arrayOfStrings": {"type": "array", "items": {"type": "string"}},
        "arrayOfIntegers": {"type": "array", "items": {"type": "integer"}}
      },
      "required": ["stringControl"]
    },
    "objectOfArraysOfObject":{
      "type": "object",
      "properties": {
        "stringControl": {"type": "string"},
        "arrayOfObjectsPerson": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "namePerson": {"type": "string"},
              "phonePerson": {"type": "integer"}
            }
          }
        },
        "arrayOfObjectsDog": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nameDog": {"type": "string"},
              "vetData": {
                "type": "object",
                "properties": {
                  "dogId": {"type": "integer"},
                  "breedName": {"type": "string"}
                }
              }
            }
          }
        }
      },
      "required": ["stringControl", "arrayOfObjectsPerson"]
    },
    "objectOfMapsOfBasicTypes":{
      "type": "object",
      "properties": {
        "stringControl": {"type": "string"},
        "mapOfStrings": {"type": "object", "additionalProperties": {"type": "string"}},
        "mapOfIntegers": {"type": "object", "additionalProperties": {"type": "integer"}}
      },
      "required": ["stringControl","mapOfStrings"]
    },
    "objectOfMapsOfObject":{
      "type": "object",
      "properties": {
        "stringControl": {"type": "string"},
        "mapOfObjectsPerson": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "namePerson": {"type": "string"},
              "phonePerson": {"type": "integer"}
            }
          }
        },
        "mapOfObjectsDog": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "nameDog": {"type": "string"},
              "vetData": {
                "type": "object",
                "properties": {
                  "dogId": {"type": "integer"},
                  "breedName": {"type": "string"}
                }
              }
            }
          }
        }
      },
      "required": ["stringControl","mapOfObjectsPerson"]
    }
  },
  "definitions": {
    "objArrayDefinition": {
      "type": "object",
      "properties": {
        "stringOfObject": {
          "type": "string"
        },
        "numberOfObject": {
          "type": "integer"
        }
      },
      "required": []
    },
    "objMapDefinition": {
      "type": "object",
      "properties": {
        "arrayOfInternalObject": {"type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["controlString",
    "arrayOfStrings",
    "mapOfStrings",
    "mapOfObjectsOfBasicTypes",
    "objectOfArraysOfBasicTypes",
    "objectOfArraysOfObject",
    "objectOfMapsOfBasicTypes",
    "objectOfMapsOfObject"
  ]

}